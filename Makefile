CC = gcc

NAME = pipex

SRC = *.c

CFLAGS = -Wall -Wextra -Werror -o

all: $(NAME)

$(NAME) : $(SRC)
	$(CC) $(CFLAGS) $(NAME) -Dchemin="\"$(PATH)"\" $^
